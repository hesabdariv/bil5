# -*- coding: utf-8 -*-
# Create the full Python source file with requested modifications and provide as a downloadable file.

import sys
import json
import os
import uuid
import datetime
from PySide2.QtWidgets import (
    QApplication, QMainWindow, QWidget, QVBoxLayout, QHBoxLayout,
    QPushButton, QLabel, QLineEdit, QTreeWidget, QFrame,
    QTreeWidgetItem, QSizePolicy, QSpacerItem, QMessageBox,
    QDialog, QTableWidget, QTableWidgetItem, QHeaderView,
    QAbstractItemView, QFileDialog
)
from PySide2.QtCore import Qt, QSize
from PySide2.QtGui import QPixmap, QTextDocument, QGuiApplication
from PySide2.QtPrintSupport import QPrinter, QPrintDialog

# --- کلاس مدیریت لایسنس ---
class LicenseManager:
    def __init__(self):
        self.license_file = "license.json"
        self.hardware_id = self.generate_hardware_id()
        self.license_key = None
        self.expiration_date = None
        self.is_licensed = self.load_license()

    def generate_hardware_id(self):
        """Generates a unique hardware ID using the MAC address."""
        return str(uuid.UUID(int=uuid.getnode()))

    def load_license(self):
        """Loads the license key from the license file."""
        if os.path.exists(self.license_file):
            try:
                with open(self.license_file, 'r', encoding='utf-8') as f:
                    data = json.load(f)
                    self.license_key = data.get("license_key")
                    self.expiration_date = data.get("expiration_date")
                return self.verify_license()
            except (IOError, json.JSONDecodeError):
                return False
        return False

    def save_license(self, new_license_key):
        """Saves the license key to the license file and updates the expiration date."""
        try:
            parts = new_license_key.split('_')
            if len(parts) == 2 and parts[0] == self.hardware_id:
                exp_date = datetime.datetime.strptime(parts[1], "%Y-%m-%d").date()
                if exp_date >= datetime.date.today():
                    self.license_key = new_license_key
                    self.expiration_date = str(exp_date)
                    with open(self.license_file, 'w', encoding='utf-8') as f:
                        json.dump({"license_key": self.license_key, "expiration_date": self.expiration_date}, f, ensure_ascii=False, indent=4)
                    self.is_licensed = True
                    return True
                else:
                    QMessageBox.warning(None, "خطای لایسنس", "لایسنس منقضی شده است.")
            else:
                QMessageBox.warning(None, "خطای لایسنس", "لایسنس نامعتبر است.")
        except (ValueError, IndexError):
            QMessageBox.warning(None, "خطای لایسنس", "فرمت لایسنس نامعتبر است.")
        self.is_licensed = False
        return False

    def verify_license(self):
        """Verifies the license key and checks for expiration."""
        if self.license_key:
            try:
                parts = self.license_key.split('_')
                if len(parts) == 2 and parts[0] == self.hardware_id:
                    exp_date = datetime.datetime.strptime(parts[1], "%Y-%m-%d").date()
                    if exp_date >= datetime.date.today():
                        self.expiration_date = str(exp_date)
                        return True
                    else:
                        return False
            except (ValueError, IndexError):
                pass
        return False

# --- فرم لایسنس ---
class LicenseDialog(QDialog):
    def __init__(self, license_manager, parent=None):
        super().__init__(parent)
        self.license_manager = license_manager
        self.setWindowTitle("مدیریت لایسنس")
        self.setFixedSize(500, 350)
        self.setLayoutDirection(Qt.RightToLeft)
        self.init_ui()
        self.set_style()
        self.show_hardware_id()

    def init_ui(self):
        main_layout = QVBoxLayout(self)

        # HWID
        hwid_frame = QFrame()
        hwid_frame.setObjectName("sectionFrame")
        hwid_layout = QVBoxLayout(hwid_frame)

        hwid_label = QLabel("شناسه سخت‌افزار:")
        self.hwid_display = QLineEdit()
        self.hwid_display.setReadOnly(True)
        hwid_layout.addWidget(hwid_label)
        hwid_layout.addWidget(self.hwid_display)

        hwid_buttons_layout = QHBoxLayout()
        self.copy_hwid_btn = QPushButton("کپی شناسه")
        self.copy_hwid_btn.clicked.connect(self.copy_hardware_id)
        self.save_hwid_btn = QPushButton("ذخیره شناسه")
        self.save_hwid_btn.clicked.connect(self.save_hardware_id)
        hwid_buttons_layout.addWidget(self.copy_hwid_btn)
        hwid_buttons_layout.addWidget(self.save_hwid_btn)
        hwid_layout.addLayout(hwid_buttons_layout)
        main_layout.addWidget(hwid_frame)

        # License Key
        license_frame = QFrame()
        license_frame.setObjectName("sectionFrame")
        license_layout = QVBoxLayout(license_frame)

        license_label = QLabel("ورود لایسنس:")
        self.license_input = QLineEdit()
        self.license_input.setPlaceholderText("لایسنس را وارد کنید...")
        license_layout.addWidget(license_label)
        license_layout.addWidget(self.license_input)

        license_buttons_layout = QHBoxLayout()
        self.paste_license_btn = QPushButton("چسباندن")
        self.paste_license_btn.clicked.connect(self.paste_license)
        self.load_file_btn = QPushButton("دریافت از فایل")
        self.load_file_btn.clicked.connect(self.load_license_file)
        self.apply_license_btn = QPushButton("اعمال لایسنس")
        self.apply_license_btn.setObjectName("applyLicenseBtn")
        self.apply_license_btn.clicked.connect(self.apply_license)
        license_buttons_layout.addWidget(self.paste_license_btn)
        license_buttons_layout.addWidget(self.load_file_btn)
        license_buttons_layout.addWidget(self.apply_license_btn)
        license_layout.addLayout(license_buttons_layout)
        main_layout.addWidget(license_frame)

    def set_style(self):
        self.setStyleSheet("""
            QDialog {
                background-color: #e6e6e6;
                border-radius: 15px;
            }
            QLabel {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 16px;
                font-weight: bold;
                color: #333;
            }
            QLineEdit {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 14px;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 8px;
                background-color: white;
            }
            QPushButton {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 14px;
                color: white;
                background-color: #007bff;
                border: none;
                border-radius: 10px;
                padding: 10px;
                margin-top: 5px;
            }
            QPushButton:hover {
                background-color: #0056b3;
            }
            QPushButton#applyLicenseBtn {
                background-color: #28a745;
            }
            QPushButton#applyLicenseBtn:hover {
                background-color: #218838;
            }
            QFrame#sectionFrame {
                border: 1px solid #ccc;
                border-radius: 10px;
                padding: 15px;
                background-color: #f0f0f0;
            }
        """)

    def show_hardware_id(self):
        self.hwid_display.setText(self.license_manager.hardware_id)

    def copy_hardware_id(self):
        clipboard = QGuiApplication.clipboard()
        clipboard.setText(self.license_manager.hardware_id)
        QMessageBox.information(self, "کپی شد", "شناسه سخت‌افزار با موفقیت در کلیپ‌بورد کپی شد.")

    def save_hardware_id(self):
        file_path, _ = QFileDialog.getSaveFileName(self, "ذخیره شناسه سخت‌افزار", "hardware_id.txt", "Text Files (*.txt)")
        if file_path:
            try:
                with open(file_path, 'w') as f:
                    f.write(self.license_manager.hardware_id)
                QMessageBox.information(self, "ذخیره شد", "شناسه سخت‌افزار با موفقیت ذخیره شد.")
            except IOError as e:
                QMessageBox.warning(self, "خطا در ذخیره", f"خطا در ذخیره فایل: {e}")

    def paste_license(self):
        clipboard = QGuiApplication.clipboard()
        self.license_input.setText(clipboard.text())

    def load_license_file(self):
        file_path, _ = QFileDialog.getOpenFileName(self, "انتخاب فایل لایسنس", "", "License Files (*.json)")
        if file_path:
            try:
                with open(file_path, 'r', encoding='utf-8') as f:
                    data = json.load(f)
                    license_key = data.get("license_key")
                    if license_key:
                        self.license_input.setText(license_key)
                    else:
                        QMessageBox.warning(self, "خطا", "فایل لایسنس معتبر نیست. کلید 'license_key' یافت نشد.")
            except (IOError, json.JSONDecodeError) as e:
                QMessageBox.warning(self, "خطا در باز کردن فایل", f"خطا در پردازش فایل: {e}")

    def apply_license(self):
        license_key = self.license_input.text().strip()
        if self.license_manager.save_license(license_key):
            QMessageBox.information(self, "موفقیت", "لایسنس با موفقیت اعمال شد. برنامه را دوباره اجرا کنید.")
            self.accept()


# --- فرم ورود ---
class LoginForm(QDialog):
    def __init__(self, parent=None):
        super().__init__(parent)
        self.setWindowTitle("ورود به برنامه")
        self.setFixedSize(350, 250)
        self.setLayoutDirection(Qt.RightToLeft)
        self.username = "admin"
        self.password = "12345"
        self.init_ui()
        self.set_login_style()

    def init_ui(self):
        main_layout = QVBoxLayout(self)

        title_label = QLabel("ورود به سیستم")
        title_label.setAlignment(Qt.AlignCenter)
        title_label.setStyleSheet("font-size: 20px; font-weight: bold; color: #333; margin-bottom: 20px;")
        main_layout.addWidget(title_label)

        username_layout = QHBoxLayout()
        username_layout.setDirection(QHBoxLayout.RightToLeft)
        username_label = QLabel("نام کاربری:")
        self.username_input = QLineEdit()
        self.username_input.setPlaceholderText("نام کاربری را وارد کنید...")
        username_layout.addWidget(username_label)
        username_layout.addWidget(self.username_input)
        main_layout.addLayout(username_layout)

        password_layout = QHBoxLayout()
        password_layout.setDirection(QHBoxLayout.RightToLeft)
        password_label = QLabel("رمز عبور:")
        self.password_input = QLineEdit()
        self.password_input.setPlaceholderText("رمز عبور را وارد کنید...")
        self.password_input.setEchoMode(QLineEdit.Password)
        password_layout.addWidget(password_label)
        password_layout.addWidget(self.password_input)
        main_layout.addLayout(password_layout)

        main_layout.addSpacerItem(QSpacerItem(20, 20, QSizePolicy.Minimum, QSizePolicy.Expanding))

        login_button = QPushButton("ورود")
        login_button.clicked.connect(self.check_login)
        main_layout.addWidget(login_button)

    def set_login_style(self):
        self.setStyleSheet("""
            QDialog {
                background-color: #f7f7f7;
                border-radius: 15px;
            }
            QLabel {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 16px;
                color: #555;
            }
            QLineEdit {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 14px;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 8px;
            }
            QPushButton {
                font-family: 'B Nazanin', 'Sahel', 'Vazirmatn';
                font-size: 16px;
                font-weight: bold;
                color: white;
                background-color: #007bff;
                border: none;
                border-radius: 10px;
                padding: 10px;
            }
            QPushButton:hover {
                background-color: #0056b3;
            }
        """)

    def check_login(self):
        entered_username = self.username_input.text()
        entered_password = self.password_input.text()

        if entered_username == self.username and entered_password == self.password:
            self.accept()
        else:
            QMessageBox.warning(self, "خطای ورود", "نام کاربری یا رمز عبور اشتباه است.")
            self.username_input.clear()
            self.password_input.clear()

# --- فرم ثبت مبلغ پرداختی جدید ---
class AddPaymentDialog(QDialog):
    def __init__(self, parent=None):
        super().__init__(parent)
        self.setWindowTitle("ثبت مبلغ پرداختی جدید")
        self.setFixedSize(350, 150)
        self.setLayoutDirection(Qt.RightToLeft)
        self.amount = 0
        self.init_ui()

    def init_ui(self):
        main_layout = QVBoxLayout(self)

        amount_layout = QHBoxLayout()
        amount_layout.setDirection(QHBoxLayout.RightToLeft)
        amount_label = QLabel("مبلغ دریافتی:")
        self.amount_input = QLineEdit()
        self.amount_input.setPlaceholderText("مبلغ را به تومان وارد کنید...")
        self.amount_input.setAlignment(Qt.AlignRight)
        amount_layout.addWidget(amount_label)
        amount_layout.addWidget(self.amount_input)
        main_layout.addLayout(amount_layout)

        save_button = QPushButton("ذخیره")
        save_button.clicked.connect(self.save_amount)
        main_layout.addWidget(save_button)
    
    def save_amount(self):
        try:
            amount_text = self.amount_input.text().strip().replace(",", "").replace(".", "")
            if amount_text:
                self.amount = float(amount_text)
                self.accept()
            else:
                QMessageBox.warning(self, "خطا", "لطفاً مبلغ را وارد کنید.")
        except ValueError:
            QMessageBox.warning(self, "خطا", "لطفاً یک عدد معتبر وارد کنید.")

# --- فرم ویرایش پرداخت ---
class EditPaymentDialog(QDialog):
    def __init__(self, amount, parent=None):
        super().__init__(parent)
        self.setWindowTitle("ویرایش مبلغ پرداختی")
        self.setFixedSize(350, 150)
        self.setLayoutDirection(Qt.RightToLeft)
        self.new_amount = 0
        self.init_ui(amount)

    def init_ui(self, amount):
        main_layout = QVBoxLayout(self)
        
        amount_layout = QHBoxLayout()
        amount_layout.setDirection(QHBoxLayout.RightToLeft)
        amount_label = QLabel("مبلغ جدید:")
        self.amount_input = QLineEdit()
        self.amount_input.setAlignment(Qt.AlignRight)
        self.amount_input.setText(f"{amount:,.0f}")
        amount_layout.addWidget(amount_label)
        amount_layout.addWidget(self.amount_input)
        main_layout.addLayout(amount_layout)

        save_button = QPushButton("ذخیره")
        save_button.clicked.connect(self.save_amount)
        main_layout.addWidget(save_button)
    
    def save_amount(self):
        try:
            amount_text = self.amount_input.text().strip().replace(",", "").replace(".", "")
            if amount_text:
                self.new_amount = float(amount_text)
                self.accept()
            else:
                QMessageBox.warning(self, "خطا", "لطفاً مبلغ را وارد کنید.")
        except ValueError:
            QMessageBox.warning(self, "خطا", "لطفاً یک عدد معتبر وارد کنید.")

# --- فرم تاریخچه پرداختی ---
class PaymentHistoryDialog(QDialog):
    def __init__(self, person_data, parent=None):
        super().__init__(parent)
        self.setWindowTitle(f"تاریخچه پرداختی‌ها برای {person_data['name']} {person_data['family']}")
        self.setFixedSize(500, 400)
        self.setLayoutDirection(Qt.RightToLeft)
        self.person_data = person_data
        self.parent = parent
        self.init_ui()
        self.populate_table()

    def init_ui(self):
        main_layout = QVBoxLayout(self)

        self.table = QTableWidget()
        self.table.setColumnCount(3)
        self.table.setHorizontalHeaderLabels(["ردیف", "مبلغ", "تاریخ"])
        self.table.horizontalHeader().setSectionResizeMode(QHeaderView.Stretch)
        self.table.setEditTriggers(QAbstractItemView.NoEditTriggers)
        self.table.setSelectionBehavior(QAbstractItemView.SelectRows)
        self.table.itemDoubleClicked.connect(self.edit_payment_entry)
        main_layout.addWidget(self.table)

        buttons_layout = QHBoxLayout()
        self.add_btn = QPushButton("افزودن پرداخت جدید")
        self.add_btn.clicked.connect(self.add_payment)
        self.edit_btn = QPushButton("ویرایش پرداخت انتخاب‌شده")
        self.edit_btn.clicked.connect(self.edit_payment_entry)
        self.delete_btn = QPushButton("حذف پرداخت انتخاب‌شده")
        self.delete_btn.clicked.connect(self.delete_payment_entry)

        buttons_layout.addWidget(self.add_btn)
        buttons_layout.addWidget(self.edit_btn)
        buttons_layout.addWidget(self.delete_btn)
        main_layout.addLayout(buttons_layout)

    def populate_table(self):
        self.table.setRowCount(len(self.person_data["payments"]))
        for i, entry in enumerate(self.person_data["payments"]):
            self.table.setItem(i, 0, QTableWidgetItem(str(i + 1)))
            self.table.setItem(i, 1, QTableWidgetItem(self.parent.format_number(entry["amount"])))
            self.table.setItem(i, 2, QTableWidgetItem(entry["date"]))

    def add_payment(self):
        dialog = AddPaymentDialog(self)
        if dialog.exec() == QDialog.Accepted:
            new_payment = {
                "amount": dialog.amount,
                "date": datetime.date.today().strftime('%Y-%m-%d')
            }
            self.person_data["payments"].append(new_payment)
            self.parent.save_data()
            self.populate_table()
            self.parent.update_summary_labels()
            QMessageBox.information(self, "موفقیت", "مبلغ با موفقیت ثبت شد.")

    def edit_payment_entry(self):
        selected_rows = self.table.selectionModel().selectedRows()
        if not selected_rows:
            QMessageBox.warning(self, "خطا", "لطفاً یک ردیف را انتخاب کنید.")
            return

        row = selected_rows[0].row()
        current_amount = self.person_data["payments"][row]["amount"]
        
        dialog = EditPaymentDialog(current_amount, self)
        if dialog.exec() == QDialog.Accepted:
            self.person_data["payments"][row]["amount"] = dialog.new_amount
            self.person_data["payments"][row]["date"] = datetime.date.today().strftime('%Y-%m-%d')
            self.parent.save_data()
            self.populate_table()
            self.parent.update_summary_labels()
            QMessageBox.information(self, "موفقیت", "مبلغ پرداختی با موفقیت ویرایش شد.")

    def delete_payment_entry(self):
        selected_rows = self.table.selectionModel().selectedRows()
        if not selected_rows:
            QMessageBox.warning(self, "خطا", "لطفاً یک ردیف را انتخاب کنید.")
            return
        
        row = selected_rows[0].row()
        if QMessageBox.question(self, "حذف پرداخت", "آیا مطمئن هستید که می‌خواهید این پرداخت را حذف کنید؟",
                                QMessageBox.Yes | QMessageBox.No) == QMessageBox.Yes:
            del self.person_data["payments"][row]
            self.parent.save_data()
            self.populate_table()
            self.parent.update_summary_labels()
            QMessageBox.information(self, "موفقیت", "پرداخت با موفقیت حذف شد.")


# --- برنامه اصلی ---
class BaseApp(QMainWindow):
    """
    برنامه اصلی برای مدیریت اشخاص و خدمات با قابلیت ذخیره‌سازی محلی اطلاعات.
    """
    def __init__(self):
        super().__init__()

        # تنظیمات پنجره اصلی
        self.setWindowTitle("نرم افزار بسیار ساده مدیریت بدهکاران - --------------------  تنظیم کننده علی حدادیان   09153353994")
        self.setFixedSize(900, 650)

        # مرکز صفحه
        screen = QApplication.primaryScreen().geometry()
        x = (screen.width() - self.width()) // 2
        y = (screen.height() - self.height()) // 2
        self.move(x, y)

        self.set_ui_style()

        self.main_widget = QWidget()
        self.setCentralWidget(self.main_widget)
        self.main_layout = QVBoxLayout(self.main_widget)

        # داده‌ها
        self.data_file = "data.json"
        self.data = {"persons": {}, "services": {}}
        self.selected_person_code = None
        self.selected_service_code = None
        self.is_editing_person = False 
        self.is_editing_service = False 

        # --- بالا: سه ستون ---
        self.top_frame = QFrame()
        self.top_frame.setObjectName("topFrame")
        self.top_frame.setSizePolicy(QSizePolicy.Expanding, QSizePolicy.Expanding)
        self.top_layout = QHBoxLayout(self.top_frame)
        self.main_layout.addWidget(self.top_frame, stretch=1)

        # ستون چپ: تبلیغات + نمایش جمع‌ها + پرداختی کل
        self.ad_widget = QWidget()
        self.ad_widget.setObjectName("adWidget")
        self.ad_widget.setContentsMargins(10, 10, 10, 10)
        self.ad_layout = QVBoxLayout(self.ad_widget)
        self.top_layout.addWidget(self.ad_widget, stretch=1)

        ad_label = QLabel("خدمات فنی مهندسی دهقانی ")
        ad_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(ad_label)

        ad_image_label = QLabel()
        try:
            pixmap = QPixmap("ad_image.png")
            ad_image_label.setPixmap(pixmap.scaled(QSize(200, 200), Qt.KeepAspectRatio, Qt.SmoothTransformation))
        except Exception:
            ad_image_label.setText("تصویر یافت نشد")
        ad_image_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(ad_image_label)

        self.ad_layout.addSpacerItem(QSpacerItem(20, 10, QSizePolicy.Minimum, QSizePolicy.Fixed))

        # نام شخص + خلاصه مالی
        self.person_name_label = QLabel("")
        self.person_name_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(self.person_name_label)

        self.person_debt_label = QLabel("مبلغ کل بدهی: ۰ تومان")
        self.person_debt_label.setObjectName("personDebtLabel")
        self.person_debt_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(self.person_debt_label)
        
        # NEW: Button for adding payment
        self.show_payment_history_btn = QPushButton("نمایش تاریخچه پرداختی", objectName="controlButton")
        self.show_payment_history_btn.clicked.connect(self.show_payment_history)
        self.ad_layout.addWidget(self.show_payment_history_btn)

        self.person_paid_label = QLabel("مبلغ پرداختی: ۰ تومان")
        self.person_paid_label.setObjectName("personPaidLabel")
        self.person_paid_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(self.person_paid_label)

        self.person_remaining_label = QLabel("مبلغ باقیمانده: ۰ تومان")
        self.person_remaining_label.setObjectName("personRemainingLabel")
        self.person_remaining_label.setAlignment(Qt.AlignCenter)
        self.ad_layout.addWidget(self.person_remaining_label)

        self.print_invoice_btn = QPushButton("چاپ صورتحساب", objectName="controlButton")
        self.print_invoice_btn.clicked.connect(self.print_invoice_action)
